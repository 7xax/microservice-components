{
  "name": "meezaan/microservice-components",
  "type": "library",
  "description": "A PHP Library to consistently build microservices and APIs",
  "keywords": [
    "APIs",
    "microservices"
  ],
  "homepage": "https://meezaan.net",
  "license": "GPL-3.0-or-later",
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": "8.*",
    "slim/psr7": "^1.5",
    "slim/slim": "4.*",
    "guzzlehttp/guzzle": "^7.0",
    "monolog/monolog": "^3.2",
    "php-di/php-di": "^6.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Meezaan\\Microservice\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Meezaan\\Microservice\\Tests\\": "tests/"
    }
  }
}
